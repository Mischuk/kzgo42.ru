.m_news
  clearfix()
  .item
    @media XS
      float left
      width 50%
      padding-left 10px
    @media MD
      width 32%
      margin-left 2%
      padding-left 0
    &:nth-child(2n+1)
      @media screen and (min-width: 480px) and (max-width: 991px)
        clear left
        padding-left 0
        padding-right 10px
    &:nth-child(3n+1)
      @media screen and (min-width: 992px)
        clear left
        margin-left 0
    .image
      height 145px
      @media LG
        height 180px
      a
        position relative
        display block
        size(100%)
        background-repeat no-repeat
        background-position 50%
        background-size cover
        &:after
          anim()
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background #333
          opacity 0.2
        &:hover
          &:after
            opacity 0.7
    .post-date
      margin 15px 0 10px
      roman()
      text-transform uppercase
      color #999999
      font-size 12px
    .title
      margin-bottom 25px
      a
        color #333333
        font-size 16px
        line-height 24px
        border-bottom 1px solid rgba(0,0,0,0.2)
        &:hover
          color $red
          border-color transparent