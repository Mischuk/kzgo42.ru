.m_carousel
  margin-bottom 20px
  .slick-list,
  .slick-track,
  .slide
    height 100%
  .carousel-preview
    height 300px
    @media MD
      height 450px
    .slick-arrow
      anim()
      width 52px
      height 60px
      position absolute
      top 50%
      margin-top -(@height/2)
      background-image url("../images/sprite.png")
      background-repeat no-repeat
      z-index 1
      text-indent -9999px
      background-color transparent
      border none
      opacity .5
      &:hover
        opacity 1
      &.slick-prev
        background-position -300px -350px
        left 0
      &.slick-next
        right 0
        background-position -448px -350px
    .image
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
  .carousel-thumbs
    height 60px
    margin-top 10px
    overflow hidden
    @media MD
      height 70px
    .slick-slide
      margin 0 5px
    .slick-list
      margin 0 -5px
    .image
      height 100%
      width 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
    .slide
      anim()
      border 1px solid #fff
      cursor pointer
      &.slick-current
        border 1px solid $red