h1, h2, h3, h4, h5, h6
  line-height 1.2
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 14px
h6
  font-size 12px
a[href^="tel"]
  cursor default
p
  margin-top 0
  margin-bottom 20px
article
  position relative
  font-size 16px
  line-height 24px
  color #333
  @media SM
    font-size 18px
    line-height 30px
  p.lead
    roman()
    font-size 20px
    line-height 1.5
    color #000
    @media SM
      font-size 24px
      line-height 36px
  a
    text-decoration underline
  img
    display block
    max-width 100%
    width 100%
    margin-bottom 15px
  h2, h3, h4
    margin-bottom 20px
    opensans-semibold()
    color #000
  h2
    font-size 24px
    @media SM
      font-size 28px
    @media MD
      font-size 32px
    @media LG
      font-size 36px
  h3
    font-size 20px
    @media SM
      font-size 24px
    @media MD
      font-size 28px
    @media LG
      font-size 32px
  h4
    font-size 16px
  > ul
    padding-bottom 20px
    li
      &:before
        content 'â€¢'
        margin-right 5px
        font-weight bold
        color red
      & + li
        margin-top 5px
  ol
    li
      counter-increment step-counter
      margin-bottom 15px
      &:before
        content counter(step-counter)
        margin-right 10px
        margin-bottom 4px
        font-size 80%
        background-color red
        color #fff
        font-weight bold
        padding 3px 8px

  .table-wrap
    overflow auto
    padding 15px 0
  table
    width 100%
    background #ffffff
    min-width 768px
    tr:first-child th:first-child
      border-bottom none
    tr:first-child + tr th:first-child
      border-top none
    tr:first-child + tr
      border-bottom 2px solid $red
    th
      height 30px
      padding 0 5px
      background #333
      color #fff
      medium()
      font-size 12px
      line-height 1.4
      text-transform uppercase
      border 1px solid #4b4b4b
      span
        display block
        position relative
        top -15px
        text-align left
        padding-left 10px
    td
      border 1px solid #f5f5f5
      height 60px
      text-align center
      font-size 14px
      &:first-child
        padding-left 10px
        text-align left
        font-size 14px
        line-height 1.5
    tr:nth-child(2n+4)
      background #fcfcfc
.page-title
  margin-top 15px
  margin-bottom 15px
  max-width $wrapper
  padding-left 10px
  padding-right 10px
  margin-left auto
  margin-right auto
  @media MD
    padding 0 25px
    margin-bottom 25px
  h2
    opensans-semibold()
    font-size 24px
    line-height 1
    @media XS
      font-size 30px
    @media SM
      font-size 48px
.section-title
  clearfix()
  position relative
  margin-bottom 15px
  padding-right 60px
  @media XS
    padding-right 135px
  h2
    opensans-semibold()
    float left
    font-size 24px
    line-height 1
    @media XS
      font-size 30px
    @media SM
      font-size 48px
    &.left
      text-align left
      @media XS
        font-size 30px
  .details
    position absolute
    right 0
    top 50%
    height 35px
    margin-top -(@height/2)
    @media SM
      margin-top -12px
    a
      anim()
      roman()
      display inline-block
      vertical-align middle
      position relative
      font-size 14px
      background $button
      color #fff
      padding 10px 10px 10px 35px
      border-radius $radius
      font-size 0
      line-height 35px
      height 35px
      padding-top 0
      padding-bottom 0
      @media XS
        font-size 12px
      &:after
        content ''
        background: url('../images/sprite.png') no-repeat -100px -50px;
        width: 17px;
        height: 11px;
        position absolute
        left 50%
        top 50%
        margin-left -(@width/2)
        margin-top -(@height/2)
        @media XS
          left 10px
          margin-left 0
      &:hover
        background $button-hover