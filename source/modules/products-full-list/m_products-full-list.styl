.m_products-full-list
  clearfix()
  .item
    position relative
    height 320px
    margin-bottom 20px
    @media XS
      float left
      width 50%
      padding-left 10px
      height 320px
    @media SM
      height 300px
      width 32%
      margin-left 2%
      padding-left 0
    @media MD
      height 370px
    &:nth-child(2n+1)
      @media screen and (min-width: 480px) and (max-width: 767px)
        clear left
        padding-left 0
        padding-right 10px
    &:nth-child(3n+1)
      @media screen and (min-width: 768px)
        clear left
        margin-left 0
    a
      position relative
      display block
      height 100%
      color #fff
      &:hover
        .image:after
          opacity .5
        .title span
          border-color transparent
    .image
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
      &:after
        anim()
        content ''
        width 100%
        height 100%
        position absolute
        left 0
        top 0
        background #333333
        opacity .75
    .details
      position absolute
      left 0
      bottom 0
      width 100%
      padding 20px
      @media MD
        padding 30px
      .title
        margin-bottom 10px
        span
          font-size 24px
          line-height 34px
          border-bottom 1px solid rgba(200,200,200,.5)
      .desc
        font-size 14px
        line-height 20px
