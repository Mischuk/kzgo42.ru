.m_contacts
  clearfix()
  .row
    margin-bottom 20px
    @media SM
      position relative
      &:first-child
        display table
        table-layout fixed
        width 100%
        margin-bottom 40px
  .block
    background #fff
    border 1px solid #ebebeb
    margin-bottom 20px
    padding 20px
    @media SM
      display table-cell
      vertical-align top
      width 50%
      background none
      border none
      padding 0
      height 100%
      &:first-child
        padding-right 10px
      &:last-child
        padding-left 10px
    .frame
      @media SM
        background #fff
        border 1px solid #ebebeb
        padding 20px
    .block-row
      margin-bottom 20px
      &:last-child
        margin-bottom 0
    .label
      medium()
      font-size 16px
      color #333
    .value
      font-size 16px
      color #333
      .phone
        a
          medium()
          color #333
          span
            light()
      .email
        color #af0d07
        &:hover
          text-decoration underline
  .form
    margin-top -20px
    @media SM
      margin-top 0
      position absolute
      right 10px
      top 50px
      z-index 10
      width 270px
    @media MD
      width 350px
      top 100px
    @media LG
      width 540px
      right 20px
      top 70px
      box-shadow 1px 1px 2px rgba(100,100,100,.15)
  .map
    margin-top 20px
    height 300px
    @media SM
      height 500px
      margin-top 0
    #map
      width 100%
      height 100%
  form
    background #fff
    border 1px solid #ebebeb
    padding 20px
    .title
      font-size 24px
      medium()
      margin-bottom 20px
    .form-row
      clearfix()
      margin-bottom 20px
      &:last-child
        margin-bottom 0
      .form-column
        width 100%
        @media MD
          float left
          width 47%
        & + .form-column
          margin-top 20px
          @media MD
            margin-top 0
            margin-left 6%
      input,
      textarea
        anim()
        border 1px solid #e6e6e6
        font-size 16px
        color #333
        background #f6f6f6
        font-family 'HelveticaNeueCyr-Light'
        font-weight normal
        font-style normal
        width 100%
        border-radius $radius
        padding 15px 20px
        &:focus
          border-color #e6e6e6 - 10%
          box-shadow 1px 1px 3px rgba(100,100,100,.2)
      textarea
        min-height 100px
        resize none
      button[type=submit]
        anim()
        medium()
        display inline-block
        vertical-align middle
        padding 15px 45px
        border-radius $radius
        font-size 18px
        background $button
        border none
        color #fff
        &:hover
          background $button-hover
