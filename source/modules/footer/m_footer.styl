.m_footer
  position absolute
  overflow hidden
  left 0
  bottom 0
  width 100%
  background #303030 url("../images/footer.jpg") no-repeat 50%
  background-size cover
  color #c9c9c9
  font-size 14px
  line-height 1.6
  line-height 22px
  padding 45px 0
  @media screen and (max-width: 320px)
    padding-top 30px
  .nav
    display none
    width 75%
    float left
    @media SM
      display block
      width 75%
    @media LG
      padding-left 6px
    .column
      float left
      &:first-child
        width 33.333%
        @media LG
          width 52%
        .menu
          @media LG
            float left
            width 50%
      &:last-child
        width 66.666%
        @media LG
          width 48%
          padding-left 50px
        .menu .title
          margin-top 0
      .row
        ul
          float left
          width 50%
          padding-right 30px
          @media LG
            padding-right 0
            & + ul
              padding-left 15px
    .menu
      padding-left 13px
      @media LG
        padding-left 0
      &:last-child
        .title
          margin-top 35px
          @media LG
            margin-top 0
      .title
        margin-bottom 25px
        @media LG
          margin-bottom 20px
        a
          color #c9c9c9
          text-transform uppercase
          font-size 14px
          medium()
      ul
        li
          margin-bottom 22px
          a
            anim()
            color #c9c9c9
            border-bottom 1px solid rgba(200, 200, 200, .2)
            font-size 14px
            line-height 22px
            &:hover
              color $red
              border-color $red
  .info
    @media SM
      float left
      width 25%
      padding-left 15px
      padding-right 20px
    @media LG
      padding-left 0
      width 25%
      padding-right 25px
    > div
      margin-bottom 20px
      @media SM
        margin-bottom 22px
    .phones
      a
        color #c9c9c9
        medium()
        span
          light()
    .email
      .title, a
        display inline-block
        vertical-align middle
      a
        color $red
        &:hover
          text-decoration underline
    .socials
      cursor default
      .title, a
        display inline-block
        vertical-align middle
      .title
        margin-right 5px
        @media SM
          display block
          margin-bottom 8px
      a
        trs(background)
        position relative
        height 34px
        width 34px
        background $red
        border-radius $radius
        margin-left 4px
        @media XS
          margin-left 6px
        @media SM
          margin-left 0
          margin-right 8px
        &:hover
          background $red - 10%
        &:after
          content ''
          position absolute
          left 50%
          top 50%
          background-image url("../images/sprite.png")
          background-repeat no-repeat
        &.vk
          &:after
            width 16px
            height 9px
            background-position 0 -450px
            margin-left -(@width/2)
            margin-top -(@height/2)
        &.fb
          &:after
            width 7px
            height 14px
            background-position -50px -450px
            margin-left -(@width/2)
            margin-top -(@height/2)
        &.ok
          &:after
            width 9px
            height 14px
            background-position -100px -450px
            margin-left -(@width/2)
            margin-top -(@height/2)
        &.yt
          &:after
            width 14px
            height 16px
            background-position -150px -450px
            margin-left -(@width/2)
            margin-top -(@height/2)
    .developed
      font-size 12px
      margin-top 30px
      @media SM
        margin-top 45px
      a
        color #c9c9c9
        text-decoration underline
        &:hover
          color $red